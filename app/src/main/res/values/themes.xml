<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TreeManagementAOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TreeManagementAOS" parent="Base.Theme.TreeManagementAOS" />

    <!--메인 상단에 위치하는 헤더바-->
    <style name="headerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="elevation">10dp</item>
    </style>

    <!--헤더에 오는 '수목관리시스템' 글씨
    /* 글씨 생깍과 폰트 적용 안됨 => 외부에서 가져올 예정 */
    -->
    <style name="headerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="elevation">10dp</item>
    </style>



    <!-- Progress Style -->
    <style name="ProgressStyle" parent="android:Theme.Dialog">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>



    <!-- Common Custom TextView Style -->
    <style name="labelTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#99321800</item>
    </style>

    <style name="contentTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>


    <!-- Custom Button Style-->
    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@color/cocoa_brown</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="primary_button_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="secondary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
        <item name="android:background">#1565C0</item>
    </style>

    <style name="image_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:elevation">10dp</item>
    </style>



</resources>