<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText" >

    <data>
        <variable
            name="vm"
            type="com.snd.app.ui.write.RegistTreeBasicInfoViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/header"
            style="@style/headerStyle"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            style="@style/image_btn"
            android:layout_marginStart="10dp"

            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="@id/header"
            app:srcCompat="@drawable/ic_back_24" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/headerTextStyle"
            android:text="기본 정보 입력"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintEnd_toEndOf="@id/header"
            app:layout_constraintStart_toStartOf="@id/header"
            app:layout_constraintTop_toTopOf="@id/header"/>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@id/map_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintVertical_weight="3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:elevation="10dp"

                app:layout_constraintTop_toBottomOf="@id/header">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tree_name_tv"
                    style="@style/tree_info_label"
                    android:text="수목명"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/tree_name"
                    style="@style/tree_info_edt"
                    android:completionThreshold="0"
                    android:nextFocusDown="@id/tr_owner"

                    app:filter_regex="@{true}"
                    app:layout_constraintEnd_toEndOf="@id/tree_name_tv"
                    app:layout_constraintStart_toStartOf="@id/tree_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/tree_name_tv"
                    app:max_length="@{50}"

                    tools:text="느티나무" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tr_owner_tv"
                    style="@style/tree_info_label"
                    android:layout_marginTop="10dp"
                    android:text="소유주"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tree_name" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/tr_owner"
                    style="@style/tree_info_edt"
                    android:completionThreshold="0"
                    android:longClickable="false"
                    android:nextFocusDown="@id/big_area"

                    app:filter_regex="@{true}"
                    app:isHideKeyboard="@{true}"
                    app:layout_constraintEnd_toEndOf="@id/tr_owner_tv"
                    app:layout_constraintStart_toStartOf="@id/tr_owner_tv"
                    app:layout_constraintTop_toBottomOf="@id/tr_owner_tv"
                    app:max_length="@{20}"

                    tools:hint="소유주를 입력해주세요."
                    tools:text="국가" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sr_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_white_5"
                android:elevation="2dp"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/tr_owner">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sr_no_tv"
                    style="@style/sr_no_label"
                    android:gravity="center"
                    android:text="일련번호"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/big_area_tv"
                    style="@style/sr_no_label"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:text="대구역"
                    app:layout_constraintEnd_toStartOf="@id/mid_area_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sr_no_tv" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/big_area"
                    style="@style/sr_no_edt"
                    android:completionThreshold="0"
                    android:nextFocusDown="@id/mid_area"

                    app:filter_regex="@{true}"
                    app:layout_constraintEnd_toEndOf="@id/big_area_tv"
                    app:layout_constraintStart_toStartOf="@id/big_area_tv"
                    app:layout_constraintTop_toBottomOf="@id/big_area_tv"
                    app:max_length="@{20}"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mid_area_tv"
                    style="@style/sr_no_label"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:text="중구역"
                    app:layout_constraintEnd_toStartOf="@id/small_area_tv"
                    app:layout_constraintStart_toEndOf="@id/big_area_tv"
                    app:layout_constraintTop_toBottomOf="@id/sr_no_tv" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/mid_area"
                    style="@style/sr_no_edt"
                    android:completionThreshold="0"
                    android:nextFocusDown="@id/small_area"

                    app:filter_regex="@{true}"
                    app:layout_constraintEnd_toEndOf="@id/mid_area_tv"
                    app:layout_constraintStart_toStartOf="@id/mid_area_tv"
                    app:layout_constraintTop_toBottomOf="@id/mid_area_tv"
                    app:max_length="@{20}"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/small_area_tv"
                    style="@style/sr_no_label"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:text="소구역"
                    app:layout_constraintEnd_toStartOf="@id/work_area_tv"
                    app:layout_constraintStart_toEndOf="@id/mid_area_tv"
                    app:layout_constraintTop_toBottomOf="@id/sr_no_tv" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/small_area"
                    style="@style/sr_no_edt"
                    android:nextFocusDown="@id/work_area"

                    app:filter_regex="@{true}"
                    app:layout_constraintEnd_toEndOf="@id/small_area_tv"
                    app:layout_constraintStart_toStartOf="@id/small_area_tv"
                    app:layout_constraintTop_toBottomOf="@id/small_area_tv"
                    app:max_length="@{20}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/work_area_tv"
                    style="@style/sr_no_label"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:text="작업구역"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/small_area_tv"
                    app:layout_constraintTop_toBottomOf="@id/sr_no_tv" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/work_area"
                    style="@style/sr_no_edt"
                    android:nextFocusDown="@id/work_seq"

                    app:filter_regex="@{true}"
                    app:layout_constraintEnd_toEndOf="@id/work_area_tv"
                    app:layout_constraintStart_toStartOf="@id/work_area_tv"
                    app:layout_constraintTop_toBottomOf="@id/work_area_tv"
                    app:max_length="@{20}" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/work_seq_label"
                    style="@style/sr_no_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:gravity="center"
                    android:text="시작 순번 : "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/big_area" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/work_seq"
                    style="@style/sr_no_edt"
                    android:inputType="number"

                    app:filter_regex="@{true}"
                    app:layout_constraintEnd_toEndOf="@id/work_area"
                    app:layout_constraintStart_toEndOf="@id/work_seq_label"
                    app:layout_constraintTop_toBottomOf="@id/big_area"
                    app:max_length="@{10}" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scroll_view"
            app:layout_constraintVertical_weight="2">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save"
            style="@style/primary_button_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="저 장"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>